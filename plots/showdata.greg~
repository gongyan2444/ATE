!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!!!!!!!!!!!!!!!!!!!! SPECTRA!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! CO spectrum
g\set box 4 16 14 22
set plot hist
file in \/media/ygong/512G/2025DomeA/250114rcw79-testcor/scripts/domea-rcw.bas
set nom
find /range -660 420 -575 510
set align v
set weight sigma
aver /resample
set unit v f
set unit v
set mod x -80 -10
set win -70 -30
base 1  !!!!!!! peak =1.189 K
set mod y -0.12*2*3 0.48*2*3
g\pen /col red /wei 2
mul 1./0.35
spec Y 0
g\draw text -25 0.48*2*0.6*3 "CO (4-3)" 5 /user

!! average CI spectrum for RCW 79
file in \/media/ygong/512G/2025DomeA/25rcw79-CIall/domea-rcw.bas
set nom
find /range -660 420 -575 510
set align v
set weight sigma
aver /resample
set unit v f
set unit v
set mod x -80 -10
set win -52.2 -38.9
base 1 !!!!!!! peak =0.38 K
set mod y -0.12*2*3 0.48*2*3
pen /col blue /wei 2
mul 1./0.35
spec Y 0
g\draw text -25 0.48*2*0.75*3 "[CI] 492 GHz" 5 /user

!! CII spectrum
file in \/media/ygong/512G/2025DomeA/25rcw79-CIall/rcw79_cii.sofia
set nom
find /range -660 420 -575 510
set align v
set weight equal
aver
set unit v f
set unit v
set mod x -80 -10
!!!!!!! peak =5 K
set mod y -0.12*2*3 0.48*2*3
pen /col 0 /wei 2
mul 1./2.
spec Y 0
box
g\draw text -25 0.48*2*0.9*3 "[CII] 158\gmm\s*0.5" 5 /user
g\draw text -77 0.48*2*0.9*3 "(c)" 6 /user
g\draw text -77 0.48*2*0.75*3 "RCW79" 6 /user
g\set box 5 15 14 22
label "T\dm\db (K)" /y 


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! CO spectrum
g\set box 18 30 14 22
set plot hist
file in \/media/ygong/512G/2025DomeA/25rcw120-co43all/domea-rcw.bas
set nom
find /range -475 582 -615 452
set align v
set weight sigma
aver /resample
set unit v f
set unit v
set mod x -40 30
set win -19 3
base 1  !!!!!!! peak =1.189 K
set mod y -0.6*3 2.4*3
g\pen /col red /wei 2
mul 1./0.35
spec Y 0
g\draw text 15 2.4*0.6*3 "CO (4-3)" 5 /user

!! average CI spectrum for RCW 79
file in \/media/ygong/512G/2025DomeA/25rcw120-CIall/domea-rcw.bas
set nom
find /range -475 582 -615 452
set align v
set weight sigma
aver /resample
set unit v f
set unit v
set mod x -40 30 
set win -19 3 
base 1 !!!!!!! peak =0.38 K
set mod y -0.6*3 2.4*3
pen /col blue /wei 2
mul 1./0.35
spec Y 0
g\draw text 15 2.4*0.75*3 "[CI] 492 GHz" 5 /user

!! CII spectrum
file in \/media/ygong/512G/2025DomeA/rcw120-cii-proj.sofia
set nom
find /range -475 582 -615 452
set align v
set weight equal
aver
set unit v f
set unit v
set mod x -40 30
!!!!!!! peak =5 K
set mod y -0.6*3 2.4*3
pen /col 0 /wei 2
mul 1.
spec Y 0
box
g\draw text 15  2.4*0.9*3 "[CII] 158\gmm" 5 /user
g\draw text -37 2.4*0.9*3 "(d)" 6 /user
g\draw text -37 2.4*0.75*3 "RCW120" 6 /user
g\set box 5 15 14 22
label "T\dm\db (K)" /y 


