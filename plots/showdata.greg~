g\set /def
g\set font duplex
clear
g\set plot_page 36 40

g\set box 4 16 24 36
g\pen /col 0 /wei 2
g\image rcw79-co43-corr3-crop-sm6.fits
lut rainbow3 !Spectral.lut /rev
g\lim 12 -12 -12 12  min
g\plot /scal line -10 20
g\wed top
!g\box /unit min
!pause
!! ruler
g\draw relocate -6-4.3/2 9 /user min
g\draw line -6+4.3/2 9 /user min
g\draw relocate -6-4.3/2 9-0.5 /user min
g\draw line -6-4.3/2 9+0.5 /user min

g\draw relocate -6+4.3/2 9-0.5 /user min
g\draw line -6+4.3/2 9+0.5 /user min

g\draw text -6 10 "5 pc" 5 /user min

g\image RCW79_CII-sm6.mean
g\lim 12 -12 -12 12  min
g\level 25 to 75 by 10
g\pen /col 7 /wei 3
g\rgmap /abs
g\pen /col 0 /wei 2
g\rgmap /abs 

g\image rcw79-ci-sm6.fits
g\lim 12 -12 -12 12  min
g\pen /col 7 /wei 3
g\level 1.5 to 4 by 0.5
g\rgmap /abs
g\pen /col blue /wei 2
g\rgmap /abs

g\pen /col 0 
g\box n p /abs
g\draw text 13:41:00 -61:55:44.2297 "13\uh41\um" 5 /user abs
g\draw text 13:40:00 -61:55:44.2297 "13\uh40\um" 5 /user abs
g\draw text 13:39:00 -61:55:44.2297 "13\uh39\um" 5 /user abs
g\draw text 9 10 "(a)" 4 /user min

g\label "R.A.(J2000)" /x
!g\label "DEC.(J2000)" /y
g\draw text 6 14 "\s(T\dm\dbdv (K.km/s)" 5


